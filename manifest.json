{
    "manifest_version": 3,
    "name": "Product Price Tracker",
    "version": "1.0",
    "description": "Tracks product prices and notifies on price changes.",
    "permissions": ["storage", "activeTab", "scripting"],
    "action": {
      "default_popup": "popup.html",
      "default_icon": "icon.png"
    },
    "background": {
      "service_worker": "background.js"
    },
    "content_scripts": [
      {
        "matches": ["*://*.daraz.com.bd/*"],
        "js": ["content.js"]
      }
    ]
  }
  